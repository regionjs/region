{
  "name": "region-core",
  "version": "11.0.0",
  "description": "region-core",
  "keywords": [
    "react",
    "region",
    "region-core"
  ],
  "repository": "github:regionjs/region-core",
  "license": "MIT",
  "author": "Cong Zhang <dancerphil1994@gmail.com>",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "sideEffects": false,
  "directories": {
    "example": "example"
  },
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "build": "rm -rf lib/ && tsc",
    "build-es": "rm -rf es/ && tsc --project tsconfig.es.json",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest src --colors --coverage",
    "codecov": "yarn test && codecov",
    "prepublishOnly": "yarn build && yarn build-es"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test && yarn build && yarn build-es"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/scripts/jest.setup.ts"
    ]
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {
    "json-stable-stringify": "^1.0.1",
    "use-subscription": "^1.5.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/react": "^17.0.2",
    "@types/react-test-renderer": "^17.0.1",
    "@types/use-subscription": "^1.0.0",
    "codecov": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "react": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.2.2"
  }
}
