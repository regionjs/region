    "@types/react-redux": "^7.0.5",
    "@types/react-test-renderer": "^16.8.1",
    "@types/shallowequal": "^1.1.1",
    "codecov": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "react": "^16.8.5",
    "react-test-renderer": "^16.8.5",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
