{
    "compilerOptions": {
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "jsx": "react",
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*/",
        "./scripts/**/*/"
    ]
}
